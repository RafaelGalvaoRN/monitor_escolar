 <script>
  // Quando a página carregar, insere header e footer
  $(function () {
    $("#footer-placeholder").load("footer.html");
    $("#header-placeholder").load("header.html");

    // 3 segundos depois, faz o fade-out do footer
    setTimeout(function() {
      $("#footer-placeholder").fadeOut("slow");
      // você pode trocar "slow" por 1000 (milissegundos = 1s)
    }, 1000);
  });
</script>

